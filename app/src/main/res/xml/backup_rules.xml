<?xml version="1.0" encoding="utf-8"?>
<!--
    NOTE: allowBackup="false" in AndroidManifest.xml disables automatic backup.
    These rules are a safety net in case backup is re-enabled later.
-->
<full-backup-content>
    <!-- Exclude ALL credentials -->
    <exclude domain="sharedpref" path="." />
    
    <!-- Exclude the entire Termux bootstrap environment -->
    <exclude domain="file" path="usr/" />
    
    <!-- Exclude logs and temp -->
    <exclude domain="file" path="logs/" />
    <exclude domain="file" path="temp/" />
    <exclude domain="cache" path="." />
    
    <!-- Exclude WorkManager database (if somehow still present) -->
    <exclude domain="file" path="../no_backup/" />
    
    <!-- Only include user scripts if backup is re-enabled -->
    <include domain="file" path="scripts/" />
</full-backup-content>
