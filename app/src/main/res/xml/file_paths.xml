<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        FIXED: Replaced root-level path="." with specific subdirectories.
        The original exposed ALL internal files via FileProvider.
    -->

    <!-- Shared files (for intent-based file sharing) -->
    <files-path name="shared_files" path="shared/" />
    
    <!-- Scripts the user might want to share -->
    <files-path name="scripts" path="scripts/" />
    
    <!-- AI models if sharing is needed -->
    <files-path name="ai_models" path="ai_models/" />

    <!-- External downloads directory -->
    <external-files-path name="downloads" path="Downloads/" />
    
    <!-- Cache for temporary sharing (auto-cleaned) -->
    <cache-path name="share_cache" path="share_cache/" />
</paths>
