<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- External storage permissions for Android 9 and below -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
                     android:maxSdkVersion="29" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
                     android:maxSdkVersion="29" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- REMOVED: RECORD_AUDIO â€” not used anywhere in the codebase.
         Add back ONLY when voice input is actually implemented. -->

    <application
        android:name="com.termux.plus.TermuxPlusApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.TermuxPlus"
        tools:targetApi="34">

        <!-- REMOVED: requestLegacyExternalStorage and preserveLegacyExternalStorage
             Not needed when properly targeting SDK 34 with scoped storage. -->

        <!-- Main Terminal Activity with Tabs -->
        <activity
            android:name="com.termux.app.TabbedTerminalActivity"
            android:exported="true"
            android:launchMode="standard"
            android:documentLaunchMode="always"
            android:theme="@style/Theme.TermuxPlus.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Support for termux-ai:// URLs -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="termux-ai" />
            </intent-filter>
        </activity>

        <!-- 
            VIEW and SEND intent handlers.
            FIXED: Replaced wildcard */* MIME with specific types this app
            can actually handle. Validates intent data in the Activity.
        -->
        <activity android:name="com.termux.app.TermuxViewActivity"
                  android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/*"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/x-sh"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/json"/>
            </intent-filter>
        </activity>

        <activity android:name="com.termux.app.TermuxSendActivity"
                  android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/*"/>
            </intent-filter>
        </activity>

        <!-- Settings Activity -->
        <activity
            android:name="com.termux.app.TermuxPlusSettingsActivity"
            android:exported="false"
            android:label="@string/settings_title"
            android:parentActivityName="com.termux.app.TabbedTerminalActivity" />

        <activity
            android:name="com.termux.app.PlusTogglesActivity"
            android:exported="false"
            android:label="Plus Features"
            android:parentActivityName="com.termux.app.TermuxPlusSettingsActivity"
            android:theme="@style/Theme.TermuxPlus" />

        <activity
            android:name="com.termux.app.PluginSettingsActivity"
            android:exported="false"
            android:label="Plugins"
            android:parentActivityName="com.termux.app.TermuxPlusSettingsActivity"
            android:theme="@style/Theme.TermuxPlus" />

        <!-- Claude/AI Setup Activity (API key entry, provider selection) -->
        <activity
            android:name="com.termux.ai.ClaudeSetupActivity"
            android:exported="false"
            android:label="@string/claude_setup_title"
            android:parentActivityName="com.termux.app.TabbedTerminalActivity" />

        <!-- File Picker Activity -->
        <activity
            android:name="com.termux.ui.FilePickerActivity"
            android:exported="false"
            android:label="@string/file_picker_title"
            android:theme="@style/Theme.TermuxPlus" />

        <!-- File Provider for sharing files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- REMOVED: BOOT_COMPLETED receiver (onReceive was empty placeholder) -->
        <!-- Add back when there's actual boot-time initialization to perform -->

    </application>

</manifest>
